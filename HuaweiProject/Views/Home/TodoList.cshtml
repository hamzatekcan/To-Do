@model IEnumerable<HuaweiProject.Models.ToDo>



@{
    ViewBag.Title = "To-Do List";
}

<h2>To-Do List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td>


                @Html.ActionLink(" Edit", "ToDoEdit", new { id = item.ID }, new { @class = "glyphicon glyphicon-pencil color" })  &nbsp; &nbsp;

                @Html.ActionLink(" Delete", "ToDoDelete", new { id = item.ID }, new { @class = "glyphicon glyphicon-trash color" })

            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink(" Back", "Index", null, new { @class = "glyphicon glyphicon-chevron-left color" })
</div>